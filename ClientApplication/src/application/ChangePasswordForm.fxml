<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChangePasswordController">
   <children>
      <Label layoutX="97.0" layoutY="23.0" text="Change password">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="10.0" layoutY="130.0" text="Old password:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="10.0" layoutY="210.0" text="New password:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <PasswordField fx:id="oldPasswordField" layoutX="125.0" layoutY="126.0" prefHeight="30.0" prefWidth="180.0" promptText="Enter old password" />
      <PasswordField fx:id="newPasswordField" layoutX="125.0" layoutY="206.0" prefHeight="30.0" prefWidth="180.0" promptText="Enter new password" />
      <Button fx:id="changeBtn" layoutX="103.0" layoutY="305.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="31.0" prefWidth="115.0" text="Update">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
